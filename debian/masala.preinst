#!/bin/sh

case "$1" in
	install|upgrade)
		egrep '^hosts:\s*files masala ' /etc/nsswitch.conf 1>/dev/null
		if [ $? != 0 ]; then
			cp -f /etc/nsswitch.conf /etc/nsswitch.conf.dpkg-old
			sed -e 's/^hosts:\s*files /hosts:          files masala /' /etc/nsswitch.conf.dpkg-old > /etc/nsswitch.conf
		fi
		;;
esac
