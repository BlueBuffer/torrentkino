#!/bin/sh

case "$1" in
	purge)
		egrep '^hosts:\s*files masala ' /etc/nsswitch.conf 1>/dev/null
		if [ $? = 0 ]; then
			cp -f /etc/nsswitch.conf /etc/nsswitch.conf.dpkg-old
			sed -e 's/^hosts:\s*files masala /hosts:          files /' /etc/nsswitch.conf.dpkg-old > /etc/nsswitch.conf
		fi
		;;
esac
